<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ub.pis2016.pis12.robotrun">

    <application
        android:name=".GameApplication"
        android:debuggable="true"
        android:configChanges="locale"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="sensorLandscape"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        >

        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="locale|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorldMenuActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".LevelMenuActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".SettingMenuActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="locale|orientation"/>
        <activity
            android:name=".ShopMenuActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".MiniGameActivity"
            android:screenOrientation="sensorLandscape" />

        <activity
            android:name=".GameActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".GameOverActivity"
            android:screenOrientation="sensorLandscape"
           />
        <activity
            android:name=".WinActivity"
            android:screenOrientation="sensorLandscape" />
        <service
            android:name=".BackgroundSoundService"
            android:enabled="true" />
        <service
            android:name=".BackgroundSoundServiceGame"
            android:enabled="true" />
    </application>

</manifest>